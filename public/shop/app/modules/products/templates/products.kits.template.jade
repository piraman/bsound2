.row
	.col-md-12
		ol.breadcrumb
			li
				a Главная
			li
				a Комлекты
			li.active
				a(ng-bind='kit.title')
.row
	.col-md-12
		.well
			.row
				.col-md-4(ng-repeat='product in kit.products')
					.thumbnail
						a(ui-sref='products.document({product: product._id})')
							img(ng-src='{{base}}/pictures/{{product.pictures.main}}')
						.caption
							h3(ng-bind='product.name')
							p(ng-bind='product.info')
							p(ng-bind='product.cost')  р.
.row
	.col-md-12
		button.btn.btn-default В корзину



